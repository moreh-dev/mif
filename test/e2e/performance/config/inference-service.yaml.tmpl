apiVersion: odin.moreh.io/v1alpha1
kind: InferenceService
metadata:
  name: {{ .Name }}
  namespace: {{ .Namespace }}
spec:
  replicas: {{ .Replicas }}
  inferencePoolRefs:
    - name: heimdall
  templateRefs:
    {{- range .TemplateRefs }}
    - name: {{ . }}
    {{- end }}
  template:
    spec:
      containers:
        - name: main
          env:
            {{- if .HFToken }}
            - name: HF_TOKEN
              value: "{{ .HFToken }}"
            {{- end }}
            {{- if .HFEndpoint }}
            - name: HF_ENDPOINT
              value: "{{ .HFEndpoint }}"
            {{- end }}
          {{- if not .IsKind }}
            - name: PYTHONHASHSEED
              value: "12345"
          resources:
            requests:
              mellanox/hca: "1"
            limits:
              mellanox/hca: "1"
          {{- end }}
      {{- if not .IsKind }}
      tolerations:
        - key: amd.com/gpu
          operator: Exists
          effect: NoSchedule
      {{- end }}
